<?xml version="1.0"?>
<tool id="edu.tamu.cpt.gbk.remove_feature" name="Remove Genbank Features" version="0.2">
  <description>removes specific features from a Genbank file</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command>python remove_feature.py --version</version_command>
  <command interpreter="python" detect_errors="aggressive"><![CDATA[remove_feature.py
#set gbk_files = '" "'.join([str($var) for $var in $positional_1])
"$gbk_files"

#set repeat_var_2 = '" "'.join(str($positional_2).split(','))
"$repeat_var_2"

> $default]]></command>
  <inputs>
    <param label="Genbank files" name="positional_1" type="data" multiple="True"/>
	<expand macro="gbk_feature_type" />
  </inputs>
  <outputs>
	<data format="txt" hidden="false" name="default" label="${positional_1.name} without $positional_2"/>
  </outputs>
  <tests>
      <test>
          <param name="positional_1" value="related.gbk" />
          <param name="positional_2" value="CDS,gene" />
          <output name="default" file="related.nocdsgene.gbk" />
      </test>
  </tests>
  <help><![CDATA[
**What it does**

Removes selected features from genbank file
]]></help>
</tool>
