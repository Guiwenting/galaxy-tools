<?xml version="1.0"?>
<tool id="edu.tamu.cpt.genbank.Split" name="Split Genbank File" version="1.0">
  <description>splits into individual records.</description>
  <version_command>python split.py --version</version_command>
  <command interpreter="python" detect_errors="aggressive">
#set gbk_files = '" "'.join([str($var) for $var in $genbank])

split.py
$allow_dupes
"$gbk_files"

</command>
  <inputs>
    <param label="Genbank files to split" name="genbank" type="data" multiple="True"/>
    <param label="Allow duplicate files" type="boolean" checked="true"
        name="allow_dupes" truevalue="--allow_dupes" falsevalue="" />
  </inputs>
  <outputs>
    <data format="txt" name="data">
        <discover_datasets pattern="__designation__" ext="txt"
            directory="gbk_out" visible="true" />
    </data>
  </outputs>
  <help>Split Multi-record Genbank Files
================================

Artemis will only open single-record genbank files.
</help>
  <citations/>
</tool>
