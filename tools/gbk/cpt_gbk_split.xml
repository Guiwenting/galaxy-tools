<?xml version="1.0"?>
<tool id="edu.tamu.cpt.genbank.Split" name="Split Genbank File" version="1.0">
  <description>splits into individual records.</description>
  <version_command>python cpt_gbk_split.py --version</version_command>
  <stdio>
    <exit_code level="fatal" range="1:"/>
  </stdio>
  <command interpreter="python">cpt_gbk_split.py $genbank
</command>
  <inputs>
    <param help="Multi-record genbank file to split" label="gbk" name="genbank" type="data"/>
  </inputs>
  <outputs>
    <data format="txt" name="data">
        <discover_datasets pattern="__designation__" ext="txt"
            directory="gbk_out" visible="true" />
    </data>
  </outputs>
  <help>Split Multi-record Genbank Files
================================

Artemis will only open single-record genbank files.
</help>
  <tests/>
</tool>
