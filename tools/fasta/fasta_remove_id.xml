<?xml version="1.0"?>
<tool id="edu.tamu.cpt.fasta.remove_desc" name="Remove Description" version="1.0">
  <description>from fasta file</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command interpreter="python" detect_errors="aggressive">fasta_remove_id.py
$fasta
> $out
</command>
  <inputs>
    <param label="Fasta file" name="fasta" format="fasta" type="data"/>
  </inputs>
  <outputs>
    <data format="fasta" name="out">
    </data>
  </outputs>
  <tests>
      <test>
          <param name="fasta" value="regex.a3.fa"/>
          <output name="out" file="regex.a3.clean.fa" />
      </test>
  </tests>
  <help>Clears fasta descline from problematic sequences.
</help>
</tool>
