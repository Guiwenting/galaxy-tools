<tool id="edu.tamu.cpt.fasta.translate" name="Fasta Translate" version="1.0">
  <description>Translate fasta file</description>
  <stdio>
    <exit_code level="fatal" range="1:"/>
  </stdio>
  <version_command>python fasta_translate.py --version</version_command>
  <command interpreter="python"><![CDATA[fasta_translate.py
$positional_1
--table $table
$strip_stops
> $default]]></command>
  <inputs>
    <param label="Fasta file" name="positional_1" type="data"/>
    <param label="Translation table to use" help="(--table)" name="table" type="select">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
      <option value="6">6</option>
      <option value="7">7</option>
      <option value="8">8</option>
      <option value="9">9</option>
      <option value="10">10</option>
      <option selected="true" value="11">11</option>
      <option value="12">12</option>
      <option value="13">13</option>
      <option value="14">14</option>
      <option value="15">15</option>
      <option value="16">16</option>
      <option value="17">17</option>
      <option value="18">18</option>
      <option value="19">19</option>
      <option value="20">20</option>
      <option value="21">21</option>
      <option value="22">22</option>
    </param>
    <param checked="false" label="Remove stop characters (--strip_stops)" name="strip_stops" type="boolean" truevalue="--strip_stops" falsevalue=""/>
  </inputs>
  <outputs>
    <data format="fasta" hidden="false" name="default"/>
  </outputs>
  <help><![CDATA[
**What it does**

Translate DNA sequences to protein sequences

]]></help>
</tool>

