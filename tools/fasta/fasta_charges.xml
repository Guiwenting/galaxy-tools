<?xml version="1.0"?>
<tool id="edu.tamu.cpt.tools.charges" name="Charges" version="1.0">
  <description>colour sequences based on rules</description>
  <version_command>python fasta_charges.py --version</version_command>
  <command interpreter="python" detect_errors="aggressive">fasta_charges.py
$fasta
--cs $cs
--width $width

> $html
</command>
  <inputs>
    <param label="Fasta protein file" name="fasta" format="fasta" type="data"/>
    <param label="Colour scheme" name="cs" type="select">
      <option value="default">Deafult hyrophobic/polar/charged</option>
    </param>
    <param label="Plot width" name="width" type="integer" value="120" />
  </inputs>
  <outputs>
    <data format="html" name="html">
    </data>
  </outputs>
  <tests>
      <test>
          <param name="fasta" value="prot.fa"/>
          <param name="cs" value="default" />
          <param name="width" value="120" />
          <output name="html" file="charges.html" />
      </test>
  </tests>
  <help>Charges
=======

Colour sequences based on rules. Email esr@tamu.edu to request new colour schemes

</help>
</tool>
