<?xml version="1.0"?>
<tool id="edu.tamu.cpt.fasta.gcskew" name="GC Skew" version="1.0">
  <description>calculator</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <version_command>python fasta_gc_skew.py --version</version_command>
  <command detect_errors="aggressive"><![CDATA[
python $__tool_directory__/fasta_gc_skew.py
$positional_1
--window $window
--step_size $step_size
> $default]]></command>
  <inputs>
    <param label="fasta file" name="positional_1" type="data"/>
    <param label="Window size for skew calculation" help="(--window)" name="window" type="integer" value="1000"/>
    <param label="Step size for skew calculation" help="(--step_size)" name="step_size" type="integer" value="100"/>
  </inputs>
  <outputs>
    <data format="wig" name="default"/>
  </outputs>
  <tests>
      <test>
          <param name="fasta_file" value="random.fa" />
          <param name="window" value="10" />
          <param name="step_size" value="10" />
          <output name="default" file="random.10.wig" />
      </test>
  </tests>
  <help><![CDATA[
**What it does**

Calculates GC Skew and saves as a Wig file for visualization.

]]></help>
    <expand macro="citations" />
</tool>
