<tool id="edu.tamu.cpt.fasta.rename" name="Fasta Sequence Renamer" workflow_compatible="true">
  <description>rename fasta sequences</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <command interpreter="python" detect_errors="aggressive"><![CDATA[fasta_rename.py $positional_1
$positional_2
> $default]]></command>
  <inputs>
    <param label="Input sequence" name="positional_1" type="data" format="fasta"/>
    <param label="New name for the fasta sequence" name="positional_2" type="text"/>
  </inputs>
  <outputs>
    <data format="fasta" hidden="false" name="default" label="$positional_2"/>
  </outputs>
  <help><![CDATA[TODO: Bug @erasche until he fixes it or make a PR]]></help>
</tool>

