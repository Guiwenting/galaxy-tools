<?xml version="1.0"?>
<tool id="edu.tamu.cpt2.util.glimmer3_to_gff3" name="Glimmer3 to GFF3" version="1.0">
  <description>convert formats</description>
  <version_command>python cpt_convert_glimmer_to_gff3.py --version</version_command>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <expand macro="stdio"/>
  <command>
@GENOME_SELECTOR_PRE@

python $__tool_directory__/cpt_convert_glimmer_to_gff3.py
$glimmer
@GENOME_SELECTOR@
> $data
</command>
  <inputs>
    <param label="Glimmer Output" name="glimmer" type="data" format="tabular"/>
    <expand macro="genome_selector" />
  </inputs>
  <outputs>
    <data format="gff3" name="data">
    </data>
  </outputs>
  <tests>
      <test>
          <param name="reference_genome_source" value="history" />
          <param name="genome_fasta" value="mga.fa" />
          <param name="glimmer" value="glimmer.out" />
          <output name="data" file="glimmer.gff3" />
      </test>
  </tests>
  <help>
**What it does**

Converts Glimmer3 table to GFF3
</help>
</tool>
