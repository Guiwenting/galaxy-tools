<tool id="TMHMM_to_gff3" name="TMHMM (GFF3)" version="1.1.0">
	<description>predicts the presence and location of signal peptide cleavage sites in amino acid sequences from different organisms.</description>
	<requirements>
		<requirement type="package" version="0.6.2">bcbiogff</requirement>
	</requirements>
	<command detect_errors="aggressive"><![CDATA[
$__tool_directory__/tmhmm-2.0c/bin/decodeanhmm.Linux_x86_64

$__tool_directory__/tmhmm-2.0c/lib/TMHMM2.0.model
-f $__tool_directory__/tmhmm-2.0c/lib/TMHMM2.0.options
-plp
< $infile

| python $__tool_directory__/parse_decodeanhmm2gff3.py > $output
]]>
	</command>
	<inputs>
		<param name="infile" type="data" format="fasta" label="Protein Fasta file" />
	</inputs>
	<outputs>
		<data name="output" label="TMHMM on ${on_string}" format="gff3" />
	</outputs>
	<help>
	</help>
	<tests>
		<test>
			<param name="infile" value="tmp.fa" />
			<output name="output" file="tmhmm.gff3" />
		</test>
	</tests>
</tool>
