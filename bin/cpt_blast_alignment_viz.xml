<?xml version="1.0"?>
<tool id="edu.tamu.cpt.genbank.blastalignment" name="Blast Alignment Visualization" version="1.94">
  <description>plots blast alignments</description>
  <version_command>python cpt_blast_alignment_viz.py --version</version_command>
  <stdio>
    <exit_code level="fatal" range="1:"/>
  </stdio>
  <command interpreter="python"> cpt_blast_alignment_viz.py
--galaxy
--outfile_supporting $__new_file_path__
--blast "${blast}"

--plot "${plot}"

--plot_files_path "${plot.files_path}"

--plot_format "${plot_format}"

--plot_id "${plot.id}"

</command>
  <inputs>
    <param help="Blast file to plot" label="blast" name="blast" optional="False" type="data"/>
    <param help="SVG Plot" label="Format of plot" name="plot_format" optional="False" type="select">
      <option value="CONF">CONF</option>
      <option selected="True" value="TXT">TXT</option>
    </param>
  </inputs>
  <outputs>
    <data format="TXT" name="plot">
      <change_format>
        <when format="txt" input="plot_format" value="CONF"/>
        <when format="txt" input="plot_format" value="TXT"/>
      </change_format>
    </data>
  </outputs>
  <help>Blast Alignment Viz.
====================

</help>
  <tests/>
</tool>
