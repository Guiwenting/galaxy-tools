<?xml version="1.0"?>
<tool id="edu.tamu.cpt.gbk.subsection" name="Genbank Subsection" version="1.0">
  <description>Extract subsets of genbank files</description>
  <stdio>
    <exit_code level="fatal" range="1:"/>
  </stdio>
  <version_command>python cpt_gbk_subsection.py --version</version_command>
  <command interpreter="python"><![CDATA[cpt_gbk_subsection.py
$positional_1

#if $source.source_select == 'file':
--table $table
#else:
--coordinates $start,$end
#end if

$include_unlisted
> $default]]></command>
  <inputs>
    <param label="Genbank file" name="positional_1" type="data"/>
    <conditional name="source">
        <param name="source_select" type="select" label="Subsection Location List">
            <option value="file">Tabular File</option>
            <option value="text">Direct Entry</option>
        </param>
        <when value="file">
            <param label="Table of coordinates to cut" help="(--table)" name="table" type="data" format="tabular"/>
        </when>
        <when value="text">
            <param label="Start coordinate" name="start" type="integer" value="1"/>
            <param label="End coordinate" name="end" type="integer" value="1000"/>
        </when>
    </conditional>
    <param checked="false" label="If coordinates aren't listed in the file, still include in output" help="(--include_unlisted)" name="include_unlisted" type="boolean" truevalue="--include_unlisted" falsevalue=""/>
  </inputs>
  <outputs>
    <data format="txt" hidden="false" name="default"/>
  </outputs>
  <help><![CDATA[]]></help>
</tool>
