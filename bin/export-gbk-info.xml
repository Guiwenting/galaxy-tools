<?xml version="1.0"?>
<tool id="edu.tamu.cpt.genbank.MetadataExport" name="Genbank Metadata Export" version="1.94">
  <description>exports metadata about genbank files (citations, taxonomy, etc)</description>
  <version_command>python export-gbk-info.py --version</version_command>
  <stdio>
    <exit_code level="fatal" range="1:"/>
  </stdio>
  <command interpreter="python">export-gbk-info.py
--galaxy
--outfile_supporting $__new_file_path__
--file "${file}"

--section "${section}"

--data "${data}"

--data_files_path "${data.files_path}"

--data_format "${data_format}"

--data_id "${data.id}"

</command>
  <inputs>
    <param help="Genbank file to filter" label="file" name="file" optional="False" type="data"/>
    <param help="Metadata elements to extract" label="section" name="section" optional="False" type="select">
      <option value="comment">User entered genome comments (assembly data)</option>
      <option value="date">Date</option>
      <option value="keyworks">Genome keywords</option>
      <option value="organism">Organism</option>
      <option value="references">All references</option>
      <option value="source">Genome source</option>
      <option value="taxonomy">Taxonomy</option>
    </param>
    <param help="Exported data" label="Format of data" name="data_format" optional="False" type="select">
      <option value="CONF">CONF</option>
      <option selected="True" value="TXT">TXT</option>
    </param>
  </inputs>
  <outputs>
    <data format="TXT" name="data">
      <change_format>
        <when format="txt" input="data_format" value="CONF"/>
        <when format="txt" input="data_format" value="TXT"/>
      </change_format>
    </data>
  </outputs>
  <help>GenBank Metadata Export
=======================

Export metadata from genbank files like taxonomy, citations, etc.
</help>
  <tests/>
</tool>
