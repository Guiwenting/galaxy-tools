<?xml version="1.0"?>
<tool id="edu.tamu.cpt.anip" name="ANI v2 (Protein edition)" version="2.0">
  <description>average protein identity.</description>
  <stdio>
    <exit_code level="fatal" range="1:"/>
  </stdio>
  <command interpreter="python">ani_p.py
#set file_list = '" "'.join( [ str($file) for $file in $files])
$file_list > $outfile
</command>
  <inputs>
    <param help="Input file" multiple="True" label="files" name="files" optional="False" type="data" format="txt"/>
  </inputs>
  <outputs>
    <data format="tabular" name="outfile">
    </data>
  </outputs>
  <help>
ANI_P - Average Protein Identity
================================

Same deal as ANI, this time uses proteins and requires Genbank files

</help>
  <tests/>
</tool>
